  const cart = [];

  function showPage(id) {
    document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
    document.getElementById(id).classList.add('active');
    if (id === 'menu') loadMenu();
    if (id === 'cart') loadCart();
  }

  function loadMenu() {
    const list = document.getElementById("menuList");
    list.innerHTML = '';
    dishes.forEach((dish, i) => {
      list.innerHTML += `
        <div class="dish">
          <img src="${dish.img}" />
          <p><b>${dish.name}</b><br>‚Çπ${dish.price}</p>
          <button class="button" onclick="addToCart(${i})">Add to Cart</button>
        </div>`;
    });
  }

  function addToCart(index) {
    cart.push(dishes[index]);
    alert(dishes[index].name + " added to cart!");
  }

  function loadCart() {
    const list = document.getElementById("cartList");
    list.innerHTML = '';
    if (cart.length === 0) {
      list.innerHTML = "<p>Your cart is empty.</p>";
    } else {
      cart.forEach(item => {
        list.innerHTML += `<p>${item.name} - ‚Çπ${item.price}</p>`;
      });
    }
  }

  function placeOrder() {
    if (cart.length === 0) {
      alert("Cart is empty!");
    } else {
      showPage('order');
    }
  }
